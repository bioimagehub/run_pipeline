{
  "id": "filter_image",
  "name": "Filter Image",
  "category": "Image Processing",
  "icon": "üîç",
  "color": "#569cd6",
  "description": "Apply various image filters: Gaussian, median, mean, bilateral, Sobel, Laplacian, unsharp mask, and morphological top-hat",
  "environment": "uv@3.11:filter-image",
  "executable": "python",
  "script": "standard_code/python/filter_image.py",
  "helpCommand": "python standard_code/python/filter_image.py --help",
  "arguments": [
    {
      "flag": "--input-pattern",
      "type": "glob_pattern",
      "socketSide": "input",
      "isRequired": true,
      "defaultValue": "./input/*.tif",
      "description": "Glob pattern for input images",
      "validation": "must_exist",
      "userOverride": false
    },
    {
      "flag": "--output-folder",
      "type": "path",
      "socketSide": "output",
      "isRequired": true,
      "defaultValue": "./output/filtered",
      "description": "Output folder for filtered images",
      "validation": "create_if_missing",
      "userOverride": false
    },
    {
      "flag": "--filter-type",
      "type": "choice",
      "socketSide": "input",
      "isRequired": true,
      "defaultValue": "gaussian",
      "description": "Type of filter: gaussian, median, mean, bilateral, sobel, laplacian, unsharp, tophat",
      "validation": "enum:gaussian,median,mean,bilateral,sobel,laplacian,unsharp,tophat",
      "userOverride": false
    },
    {
      "flag": "--sigma",
      "type": "float",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "1.0",
      "description": "Sigma for Gaussian/unsharp filters",
      "validation": "range:0.1-10.0",
      "userOverride": false
    },
    {
      "flag": "--size",
      "type": "int",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "3",
      "description": "Size for median/mean/tophat filters (must be odd)",
      "validation": "range:1-51",
      "userOverride": false
    },
    {
      "flag": "--sigma-spatial",
      "type": "float",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "5.0",
      "description": "Spatial sigma for bilateral filter",
      "validation": "range:0.1-100.0",
      "userOverride": false
    },
    {
      "flag": "--sigma-intensity",
      "type": "float",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "50.0",
      "description": "Intensity sigma for bilateral filter",
      "validation": "range:0.1-255.0",
      "userOverride": false
    },
    {
      "flag": "--amount",
      "type": "float",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "1.0",
      "description": "Amount for unsharp mask sharpening (0.5-2.0 typical)",
      "validation": "range:0.0-5.0",
      "userOverride": false
    },
    {
      "flag": "--tophat-mode",
      "type": "choice",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "white",
      "description": "Mode for tophat filter: white or black",
      "validation": "enum:white,black",
      "userOverride": false
    },
    {
      "flag": "--axis",
      "type": "int",
      "socketSide": "input",
      "isRequired": false,
      "defaultValue": "-1",
      "description": "Axis for Sobel filter: 0, 1, or -1 for magnitude",
      "validation": "range:-1-1",
      "userOverride": false
    }
  ],
  "version": "1.0.0",
  "author": "BIPHUB",
  "lastParsed": "2025-10-26T12:00:00Z"
}
